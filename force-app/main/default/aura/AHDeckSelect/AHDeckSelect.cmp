<aura:component controller="DeckGetter" implements="forceCommunity:availableForAllPageTypes" access="global">
    <aura:attribute name="data" type="Object"/>
    <aura:attribute name="field" type="List" default=""/>
    <aura:attribute name="data2" type="Object"/>
    <aura:attribute name="field2" type="List" default=""/>
    
    <!--aura:registerEvent name="EditDeckEvent" type="c:EditDeckEvent"/-->
    <aura:handler event="c:CardtoAdd" action="{!c.AddCardEvent}"/>                    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <!--aura:handler name="CardtoAdd" event="c:CardtoAdd"
        action="{!c.AddCard}"/-->
    <!--why doesn't this catch the card?-->
    <div>
    <lightning:datatable aura:id="dataTable"
                         data="{!v.data}"
                         columns="{!v.field}"
                         keyField="Deck Name"
                         maxRowSelection="1"
                         onrowselection="{!c.handleEditDeck}"/>
	</div>
    <div>
    <lightning:datatable aura:id="dataTable2"
                         data="{!v.data2}"
                         columns="{!v.field2}"
                         keyField="Deck Name"
                         maxRowSelection="1"/>
	</div>
	<div>
        <lightning:button label="Delete Selected Card" onclick="{!c.Deletec}"/>
    </div>

</aura:component>